<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/white"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toolbar_left_text_btn"
                android:layout_width="@dimen/width18"
                android:layout_height="@dimen/width18"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back"
                android:textColor="@color/blue"
                android:textSize="@dimen/toolbar_text_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="70dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size17" />
        </LinearLayout>

        <com.amap.api.maps.MapView
            android:id="@+id/gaode_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/select_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:visibility="visible">

            <include layout="@layout/diver_select_location" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/publish_tip_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="1">

            <include layout="@layout/pass_set_destination_three" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/waite_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="1">

            <include layout="@layout/pass_has_publish_and_waite" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/has_matched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="1">

            <include layout="@layout/pass_has_match" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/get_the_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="1">

            <include layout="@layout/pass_get_the_car" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="1">

            <include layout="@layout/trip_finish" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paysuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="1">

            <include layout="@layout/pass_pay_success" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/width48"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:background="@color/bg_color"
            android:layout_margin="20dp"
            android:visibility="gone"/>
    </RelativeLayout>


</FrameLayout>