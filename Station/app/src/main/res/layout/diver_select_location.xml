<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/width98"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/set_loc_origin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="家"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size14"
            android:visibility="gone" />

        <TextView
            android:layout_width="@dimen/width13"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="从"
            android:textColorHint="@color/grey_nine"
            android:textSize="@dimen/text_size13" />

        <TextView
            android:id="@+id/origin_stop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.85"
            android:gravity="center|left"
            android:hint="我的位置"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/text_size14" />


    </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/set_loc_end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="公司"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size14"
            android:visibility="gone" />

        <TextView
            android:layout_width="@dimen/width13"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="到"
            android:textColorHint="@color/grey_nine"
            android:textSize="@dimen/text_size13" />

        <TextView
            android:id="@+id/end_stop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.85"
            android:gravity="center|left"
            android:hint="输入终点"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_nine"
            android:textSize="@dimen/text_size14" />
    </LinearLayout>
</LinearLayout>
